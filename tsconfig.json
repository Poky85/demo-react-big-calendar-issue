{
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"esModuleInterop": true,
		"noEmitOnError": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
